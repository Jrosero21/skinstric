{
  "compilerOptions": {
    // app / browser build
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    // React JSX in .tsx (fixes errors in main.tsx)
    "jsx": "react-jsx",

    // allow mixing .js/.jsx with .ts/.tsx in src
    "allowJs": true,
    "checkJs": false,

    // editor/intellisense types
    "types": ["vite/client", "react", "react-dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
